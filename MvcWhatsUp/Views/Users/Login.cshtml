@model MvcWhatsUp.Models.Login
@{
    ViewData["Title"] = "Login";
}

<partial name="_ErrorMessage" model="@TempData["ErrorMessage"]" />

<div class="container py-5">
    <h3 class="display-4 mb-4">Login</h3>
	<p class="lead">Please enter your credentials to log in.</p>
	@if (ViewBag.ErrorMessage != null)
	{
		<div class="alert alert-danger">
			@ViewBag.ErrorMessage
		</div>
	}
    <form action="/Users/Login" method="POST">
        <div class="form-group w-50">
            <label for="UserName">User:</label>
            <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Enter user name" required value="@Model?.UserName">
        </div>
        <div class="form-group w-50">
            <label for="Password">Password:</label>
            <input type="password" class="form-control" id="Password" placeholder="*****" name="Password" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Login</button>
    </form>
</div>
